{
  "base_log_dir": "logs",
  "app_name": "ai_news_parser",
  "environment": "production",
  "console_level": "INFO",
  "file_level": "DEBUG",
  "metrics_level": "METRICS",
  "max_bytes": 52428800,
  "backup_count": 10,
  "enable_json_logs": true,
  "pretty_print_json": false,
  "slow_operation_threshold": 5.0,
  "critical_operation_threshold": 30.0,
  "enable_metrics": true,
  "metrics_flush_interval": 60,
  "track_api_costs": true,
  "cost_alert_threshold": 10.0,
  "capture_stack_traces": true,
  "stack_trace_depth": 10,
  "mask_sensitive_data": true,
  "specialized_logs": {
    "api": {
      "filename": "api.log",
      "level": "DEBUG",
      "max_bytes": 104857600
    },
    "validation": {
      "filename": "validation.log",
      "level": "INFO",
      "max_bytes": 52428800
    },
    "database": {
      "filename": "database.log",
      "level": "INFO",
      "max_bytes": 52428800
    },
    "parsing": {
      "filename": "parsing.log",
      "level": "DEBUG",
      "max_bytes": 104857600
    },
    "errors": {
      "filename": "errors.log",
      "level": "ERROR",
      "max_bytes": 52428800
    },
    "metrics": {
      "filename": "metrics.log",
      "level": "METRICS",
      "max_bytes": 104857600
    },
    "costs": {
      "filename": "api_costs.log",
      "level": "INFO",
      "max_bytes": 20971520
    },
    "monitoring_errors": {
      "filename": "monitoring_errors.log",
      "level": "ERROR",
      "max_bytes": 52428800,
      "capture_stack_traces": true,
      "notify_critical": true
    },
    "websocket": {
      "filename": "websocket.log",
      "level": "WARNING",
      "max_bytes": 20971520
    },
    "process_management": {
      "filename": "process_management.log",
      "level": "INFO",
      "max_bytes": 20971520
    },
    "media": {
      "filename": "media.log",
      "level": "INFO",
      "max_bytes": 52428800
    }
  }
}